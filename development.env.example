# Development Environment Variables
# Copy this file to .env for local development

# Database Configuration (SQLite for development)
DATABASE_URL=file:dev.sqlite

# Shopify App Configuration
# These values are available in your Shopify Partner Dashboard
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-ngrok-url.ngrok-free.app
SCOPES=write_products,write_customers,write_orders

# USPS API Credentials
# Register at https://www.usps.com/business/web-tools-apis/
USPS_CONSUMER_KEY=your_usps_api_key
USPS_CONSUMER_SECRET=your_usps_consumer_id
